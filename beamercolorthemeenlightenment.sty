% See http://tex.stackexchange.com/a/40855
\newcommand\EnlightenmentBlur[1]{
   \newcommand\xoffset{0.3}
   \newcommand\yoffset{-0.2}
   % Blur
   \foreach \x in {-0.1,0.1} {
      \foreach \y in {-0.1,0.1} {
         \node[enlightenment!50!white] at (\xoffset em+\x em,\yoffset em+\y em) {
            #1
         };
      }
   }

%   % Main Shadow
%   \node[black!40!white] at (#1em+0.3em,#2em-0.2em) {
%      #3
%   };
   \node[enlightenment] at (\xoffset em,\yoffset em) {
      #1
   };
}

