\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeenlightenment}[2016/01/29 v1.0 Unofficial Enlightenment Theme]

\RequirePackage{tikz}
\RequirePackage{listings}
\RequirePackage{listingsenlightenment}

\mode<presentation>

\definecolor{enlightenment}{RGB}{51,153,255}
\definecolor{elightdark}{RGB}{136,136,136}
\definecolor{elight}{RGB}{254,254,254}


\setbeamercolor*{title}{fg=enlightenment}
\setbeamercolor*{title page header}{fg=elight}
\setbeamercolor*{author}{fg=elight}
\setbeamercolor*{normal text}{fg=elight}

\setbeamercolor{frametitle}{fg=enlightenment}
\setbeamercolor{enumerate item}{fg=enlightenment}
\setbeamercolor{enumerate subitem}{fg=enlightenment}
\setbeamercolor{enumerate subsubitem}{fg=enlightenment}
\setbeamercolor{section in head/foot}{fg=enlightenment}
\setbeamercolor{author in head/foot}{fg=enlightenment}
\setbeamercolor{date in head/foot}{fg=enlightenment}
\setbeamercolor{structure}{fg=enlightenment}
\setbeamercolor{footline}{fg=elightdark}

\mode<all>
